<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom">

    <ImageView
        android:id="@+id/button_search_fragment"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_search_24"
        android:background="#44444444"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_profile_fragment"/>

    <ImageView
        android:id="@+id/button_profile_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        android:background="#44444444"
        app:layout_constraintTop_toTopOf="@+id/button_search_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_search_fragment"
        app:layout_constraintEnd_toStartOf="@+id/button_statistic_fragment"/>

    <ImageView
        android:id="@+id/button_statistic_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_baseline_history_24"
        android:background="#44444444"
        app:layout_constraintTop_toTopOf="@+id/button_search_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_profile_fragment"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>